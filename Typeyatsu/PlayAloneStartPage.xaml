<UserControl x:Class="Typeyatsu.PlayAloneStartPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Typeyatsu"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="600"
             Loaded="UserControl_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="1" FontSize="30" Text="1人で遊ぶ" TextAlignment="Center" />
        
        <TextBlock Grid.Row="2" Text="試し打ちができます。文字を入力するとこの下に表示されます。" Margin="0,20,0,0" TextAlignment="Center" />
        
        <TextBlock Grid.Row="3" Text="{Binding TestInput}" TextAlignment="Center" />

        <TextBlock Grid.Row="4" Text="スペースまたはEnterキーを押すと始まります" FontWeight="Bold" Margin="0,20,0,0" TextAlignment="Center" />
    </Grid>
</UserControl>
